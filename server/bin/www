#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../../app');
var debug = require('debug')('aeov:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Initialize socket.io
 */

const { Server } = require('socket.io')
const io = new Server(server, { pingInterval: 2000, pingTimeout: 5000 })

const visitors = {};
const instances = {};

// A VISITOR CONNECTS TO THE SERVER
io.on('connection', (socket) => {
  console.log('a user connected');

  visitors[socket.id] = {
    name: "user" + Math.floor(Math.random() * 1000)
  };

  console.log('Current visitors:', visitors);

  // A VISITOR DISCONNECTS FROM THE SERVER
  socket.on('disconnect', (reason) => {
    console.log('user ' + socket.id + ":" + visitors[socket.id].name + ' disconnected :', reason);
    
    delete visitors[socket.id]
  })

  // A PLAYER JOINED AN INSTANCE
  socket.on('playerJoin', (data) => {
    console.log('visitor ' + socket.id + ' joined instance ' + data.instanceId + ' as player ' + data.playerName);
    visitors[socket.id].name = data.playerName;
    visitors[socket.id].id = data.playerId;

    if (!instances[data.instanceId]) {
      instances[data.instanceId] = {
        instanceStatus: {
          gameStarted: false,
          waitingForPlayers: true,
          id: data.instanceId,
        },
        playerList: {}
      }
    }

    instances[data.instanceId].playerList[data.playerId] = {
      ready: false,
      name: data.playerName,
      id: data.playerId,
      visitorId: socket.id,
    }

    for (const playerId in instances[data.instanceId].playerList) {
      const visitorId = instances[data.instanceId].playerList[playerId].visitorId
      if (visitors[visitorId]) {
        io.to(visitorId).emit('updateInstanceStatus', instances[data.instanceId].instanceStatus);
      }
    }
  });

 
  socket.on('playerReadyToPlay', (userData) => {
    const playerId = visitors[socket.id].id;
    if (!playerId) {
      return io.to(socket.id).emit('error', "Vous devez être connecté pour effectuer cette action");
    }

    const player = instances[userData.instanceId].playerList[playerId];
    if (!player) {
      return io.to(socket.id).emit('error', "Vous devez avoir rejoins l'instance pour effectuer cette action");
    }

    instances[userData.instanceId].playerList[playerId].ready = true;
    instances[userData.instanceId].playerList[playerId].civilization = userData.civilization;
    instances[userData.instanceId].playerList[playerId].color = userData.color;

    for (const otherPlayerId in instances[userData.instanceId].playerList) {
      const visitorId = instances[data.instanceId].playerList[otherPlayerId].visitorId
      if (visitors[visitorId]) {
        io.to(visitorId).emit('updateInstanceStatus', instances[data.instanceId].instanceStatus);
      }
    }
  });

    socket.on('ownerStartGame', (userData) => {
      const playerId = visitors[socket.id].id;
      if (!playerId) {
        return io.to(socket.id).emit('error', "Vous devez être connecté pour effectuer cette action");
      }

      const player = instances[userData.instanceId].playerList[playerId];
      if (!player) {
        return io.to(socket.id).emit('error', "Vous devez avoir rejoins l'instance pour effectuer cette action");
      }

      instances[userData.instanceId].instanceStatus.gameStarted = true;
      instances[userData.instanceId].instanceStatus.waitingForPlayers = false;

      for (const playerId in instances[userData.instanceId].playerList) {
        const visitorId = instances[userData.instanceId].playerList[playerId].visitorId;
        if (visitors[visitorId]) {
          io.to(visitorId).emit('updateInstanceStatus', instances[userData.instanceId].instanceStatus);
        }
      }
    });

  });

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
